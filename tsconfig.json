{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "lib": [
      "es6",
      "dom"
    ],
    "types":[
      "reflect-metadata",
      "node",
      "jest"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "public", "src/__mocks__", "**/*spec.ts"]
}
