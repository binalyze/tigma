{
  "name": "@binalyze/tigma",
  "version": "1.4.4",
  "main": "dist/tigma.js",
  "license": "GNU General Public License (GPL)",
  "scripts": {
    "build:ts": "tsc --build tsconfig.json",
    "build:webpack:debug": "webpack --config webpack.config.js --mode development && cp -rf dist/tigma.js public/scripts/tigma.js",
    "build:webpack:release": "webpack --config webpack.config.js --mode production && cp -rf dist/tigma.js public/scripts/tigma.js",
    "build:debug": "npm run build:ts && npm run build:webpack:debug",
    "build:release": "npm run build:ts && npm run build:webpack:release",
    "serve": "npm run build:webpack:debug && webpack-dev-server",
    "prepublishOnly": "npm run build:release",
    "push": "git push -f github master && git push -f origin master",
    "rimraf": "rm -rf js",
    "clean": "tsc --build --clean",
    "test:pipeline": "npm run build:ts && jest --coverage --coverageReporters=cobertura",
    "test": "npm run build:ts && jest --watchAll",
    "test:cov": "npm run build:ts && jest --coverage",
    "testbed": "npm run build:ts && node dist/testbed.js",
    "use:npm": "yrm use npm",
    "use:azure": "yrm use azure"
  },
  "dependencies": {
    "@types/js-base64": "^2.3.2",
    "@types/lodash": "^4.14.157",
    "@types/yaml": "^1.9.7",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "crypto-ts": "^1.0.2",
    "filtrex": "^2.0.0",
    "inversify": "^5.0.1",
    "inversify-inject-decorators": "^3.1.0",
    "js-base64": "^3.0.4",
    "lodash": "^4.17.19",
    "reflect-metadata": "^0.1.13",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@types/jest": "25.1.2",
    "@types/node": "^13.13.12",
    "@types/webpack": "^4.41.17",
    "compression-webpack-plugin": "^4.0.0",
    "jest": "^25.2.6",
    "jest-mock-console": "^1.0.0",
    "jest-standard-reporter": "^1.0.4",
    "string-similarity": "^4.0.1",
    "ts-jest": "25.2.0",
    "ts-loader": "^7.0.5",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-obfuscator": "^0.27.4"
  },
  "files": [
    "dist/*",
    "README.md",
    "package.json"
  ],
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFiles": [
      "../test/jest-setup-test.ts"
    ],
    "reporters": [
      "jest-standard-reporter"
    ],
    "testPathIgnorePatterns": [
      ".*.d.ts",
      ".*.js"
    ],
    "modulePathIgnorePatterns": [],
    "coverageThreshold": {
      "global": {
        "statements": 90,
        "branches": 90,
        "functions": 90,
        "lines": 90
      }
    }
  }
}
